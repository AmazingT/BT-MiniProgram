/* components/product/product.wxss */
@import "/app.wxss";

.product-wrapper{
  width: 100%;
  margin: 0 auto;
}
.product-wrapper .product-item{
  width: 49.5%;
  float: left;
  margin-bottom: 1%;
}
.product-wrapper .product-item:nth-child(even){
  margin-left: 1%;
}
.product-wrapper .product-item .product-pic{
  width: 100%;
  height: 350rpx;
  display: block;
}
.product-wrapper .product-item .product-desc{
  padding: 15rpx 0 20rpx 20rpx;
  background-color: #fff;
}
.product-item .product-desc .pro .product-name{
  color: #353535;
  font-size: 28rpx;
}
.product-item .product-desc .pro .deposit{
  margin-left: 10px;
  color: #888;
  font-size: 24rpx;
}
.product-item .product-desc .pro-title{
  margin-bottom: 5px;
}
.product-item .product-desc .product-rent{
  margin-bottom:2px;
  color: #ff585e;
  font-size: 24rpx;
}
.product-desc .product-rent .product-money{
  margin-right: 4px;
  font-size: 28rpx;
  font-weight: bold;
}
.product-desc .product-rent .product-money .mark{
  margin-right: 2px;
  font-size: 24rpx;
}
.product-item .product-desc .pro-box{
  padding: 5rpx 14rpx;
  margin-left: 8rpx;
  color: #888;
  font-size: 24rpx;
  border-radius: 10px;
  background-color: #fff;
  border: 1px solid #888;
}
.product-item .product-desc .pro-box:first-child{
  margin-left: 0px;
}
