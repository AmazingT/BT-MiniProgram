<!--pages/user/user.wxml-->
<view class='container'>
    <!-- user header certification -->
    <view class='user-header'>
      <view class='user-wrapper'>
        <view class='user-info'>
          <view class='user-avatar'>
            <open-data type="userAvatarUrl"></open-data>
          </view>
          <view class='user-name'>
            <open-data type="userNickName"></open-data>
          </view>
        </view>
        <!-- certification -->
        <view class='user-cert'>
          <!-- personal cert -->
          <view class='cert person-cert' bindtap='personalCert'>
            <image class='icon-ok' src='/images/icon/icon-ok.png'></image>
            <image class='cert-pic' src='/images/icon/person-cert.png'></image>
            <view>个人认证</view>
          </view>
          <!-- compony cert -->
          <view class='cert company-cert' bindtap='componyCert'>
            <image class='icon-ok' src='/images/icon/icon-ok.png'></image>
            <image class='cert-pic' src='/images/icon/auth-cert.png'></image>
            <view>企业认证</view>
          </view>
        </view>
      </view>
    </view>

    <!-- user info list -->
    <view class="weui-cells weui-cells_after-title">
      <navigator url="user-hire/user-hire" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__bd">我的出租</view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
      <navigator url="user-rent/user-rent" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__bd">我的租赁</view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
      <navigator url="user-account/user-account" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd">我的账户</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">积分: 1000</view>
      </navigator>
      <navigator url="user-feedback/user-feedback" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__bd">意见反馈</view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
      <view class="weui-cell">
        <view class="weui-cell__bd">联系平台</view>
      </view>
      <navigator url="about/about" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__bd">关于我们</view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
    </view>
</view>
