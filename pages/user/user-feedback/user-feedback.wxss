/* pages/user/user-feedback/user-feedback.wxss */
page{
  background-color: #f2f2f2;
}
.content{
  padding: 0 15px;
}
.content .view-wrapper{
  margin-bottom: 60rpx;
}
.content .view{
  margin-bottom: 40rpx;
  padding-top: 40rpx; 
}
.content .view .view-area{
  width: 600rpx;
  height: 200rpx;
  margin: 0 auto;
  font-size: 14px;
  line-height: 20px;
  border-radius: 10px;
  padding-top: 10px;
  padding-left: 10px;
  background-color: #fff;
}
.content .submit{
  height: 40px;
  line-height: 40px;
  color: #fff;
  font-size: 14px;
  background-color: #1abc9c;
  border-radius: 20px;
}
.rules{
  margin-bottom: 40rpx;
}
.rules .title,
.winner-wrapper .title{
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.rules .rules-wrapper{
  padding: 4px 10px;
  font-size: 12px;
  color: #999;
  background-color: #fff;
}
.rules .rules-list{
  line-height: 30px;
}
.winner-list .item{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 40rpx;
  font-size: 14px;
  background-color: #fff;
}
.winner-list .item .item-phone{
  color: #333;
}
.winner-list .item .item-time{
  color: #999;
}